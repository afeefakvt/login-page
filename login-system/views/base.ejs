
<%- include('header')-%>
    
<div class="text-center center-div"id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold text-white">User Login</h2>
            <% if(locals.msg){ %>
                <div class="alter alert-danger text-center text-danger" id="dngr">
                    <%= msg%>
                </div>
            <% } %>


            ]
        </div>
        <form action="/route/login"method="POST"class="pt-3">
            <div class="form-group">
                <input type="email"class="form-control"placeholder="email"name="email" >
                <small class="form-text text-muted text-left text-white">enter your email id</small>
            </div>
            <div class="form-group">
                <input type="password"class="form-control"name="password"placeholder="password">
            </div>
            <button type="submit"class="btn btn-success rounded-pill mt-4">Log in</button>
        </form>
    </div>
</div>


</div>



    <%- include('footer')-%>
